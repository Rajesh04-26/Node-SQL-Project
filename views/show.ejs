<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Show Users</title>
    <link rel="stylesheet" href="/show.css">
</head>

<body>
    <h2>All Users</h2>
    <table>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Email</th>
            <th colspan="2">Action</th>
        </tr>
        <% for(user of users) { %>
            <tr>
                <td><%= user.id  %></td>
                <td><%= user.username  %></td>
                <td><%= user.email  %></td>
                <td>
                    <form method="get" action="/user/<%= user.id %>/edit">
                        <button class="edit-btn">Edit Username</button>
                    </form>
                </td>
                <td>
                    <form method="post" action="/user/<%= user.id %>?_method=DELETE">
                        <button class="delete-btn">Delete User</button>
                    </form>
                </td>
            </tr>
        <% } %>
    </table>
</body>
</html>
